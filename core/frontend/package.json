{
  "name": "@bentley/imodeljs-frontend",
  "version": "1.11.0",
  "description": "iModel.js frontend components",
  "main": "lib/imodeljs-frontend.js",
  "typings": "lib/imodeljs-frontend",
  "license": "MIT",
  "scripts": {
    "build": "buildIModelJsModule",
    "clean": "rimraf lib .rush package-deps.json",
    "docs": "node ./node_modules/@bentley/build-tools/scripts/docs.js --includes=../../generated-docs/extract --json=../../generated-docs/core/imodeljs-frontend/file.json --tsIndexFile=./imodeljs-frontend.ts --onlyJson %TYPEDOC_THEME% --excludes=webgl/**/*,**/primitives",
    "extract-api": "node ./node_modules/@bentley/build-tools/scripts/extract-api.js --entry=imodeljs-frontend",
    "lint": "tslint --project . 1>&2",
    "test": "npm run webpackTests && node ./node_modules/@bentley/certa/bin/certa.js -r chrome",
    "cover": "npm test -- --cover",
    "debug:tests": "node ./node_modules/@bentley/certa/bin/certa.js -r chrome --debug",
    "webpackTests": "webpack --config ./src/test/utils/webpack.config.js 1>&2"
  },
  "iModelJs": {
    "buildModule": {
      "type": "system",
      "tscOptions": "-build",
      "sourceResources": [
        {
          "source": "./src/public/**/*",
          "dest": "./lib/public"
        },
        {
          "source": "./src/loader/checkbrowser.js",
          "dest": "./lib/loader",
          "copy": true
        }
      ],
      "webpack": {
        "dest": "./lib/module",
        "entry": "./lib/imodeljs-frontend.js",
        "bundleName": "imodeljs-frontend"
      },
      "subModules": [
        {
          "dest": "./lib/module",
          "entry": "./lib/loader/IModelJsLoader.js",
          "bundleName": "IModelJsLoader",
          "type": "system"
        },
        {
          "dest": "./lib/module",
          "entry": "./lib/loader/checkbrowser.js",
          "bundleName": "checkbrowser",
          "type": "system"
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/imodeljs/imodeljs/tree/master/core/frontend"
  },
  "keywords": [
    "Bentley",
    "BIM",
    "iModel"
  ],
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "peerDependencies": {
    "@bentley/bentleyjs-core": "^1.11.0",
    "@bentley/geometry-core": "^1.11.0",
    "@bentley/imodeljs-clients": "^1.11.0",
    "@bentley/imodeljs-common": "^1.11.0",
    "@bentley/imodeljs-i18n": "^1.11.0",
    "@bentley/imodeljs-quantity": "^1.11.0"
  },
  "//devDependencies": [
    "NOTE: All peerDependencies should also be listed as devDependencies since peerDependencies are not considered by npm install",
    "NOTE: All tools used by scripts in this package must be listed as devDependencies"
  ],
  "devDependencies": {
    "@bentley/bentleyjs-core": "1.11.0",
    "@bentley/build-tools": "1.11.0",
    "@bentley/certa": "1.11.0",
    "@bentley/geometry-core": "1.11.0",
    "@bentley/imodeljs-clients": "1.11.0",
    "@bentley/imodeljs-common": "1.11.0",
    "@bentley/imodeljs-i18n": "1.11.0",
    "@bentley/imodeljs-quantity": "1.11.0",
    "@bentley/webpack-tools": "1.11.0",
    "@types/chai": "^4.1.4",
    "@types/js-base64": "^2.3.1",
    "@types/mocha": "^5.2.5",
    "@types/node": "10.14.1",
    "@types/semver": "^5.5.0",
    "chai": "^4.1.2",
    "glob": "^7.1.2",
    "mocha": "^5.2.0",
    "nyc": "^14.0.0",
    "rimraf": "^2.6.2",
    "source-map-loader": "^0.2.3",
    "tslint": "^5.11.0",
    "tslint-etc": "^1.5.2",
    "typescript": "~3.7.4",
    "webpack": "^4.20.2"
  },
  "//dependencies": [
    "NOTE: these dependencies should be only for things that DO NOT APPEAR IN THE API",
    "NOTE: imodeljs-frontend should remain UI technology agnostic, so no react/angular dependencies are allowed"
  ],
  "dependencies": {
    "@bentley/ui-abstract": "1.11.0",
    "fuse.js": "^3.3.0",
    "js-base64": "^2.4.5",
    "js-untar": "^2.0.0",
    "ldclient-js": "^2.6.0",
    "oidc-client": "^1.9.1",
    "semver": "^5.5.0"
  },
  "nyc": {
    "nycrc-path": "./node_modules/@bentley/build-tools/.nycrc"
  }
}
